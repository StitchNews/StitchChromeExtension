{
  "manifest_version": 2,

  "name": "Stitch",
  "description": "Stitch allows you to save any piece of text.",
  "version": "1.0",

  "background_page": "background.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ]
}
